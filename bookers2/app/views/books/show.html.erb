<body>
  <main>
    <div class="container">
      <div class="row">
        <%= render 'books/userinfo', user: current_user, book: @book %>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td><%= link_to user_path(@book.id) do %>
                  <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
                  <br><%= @user.name %>
                  <% end %></th>
                <td><%= link_to user_path(@book.id) do %>
                  <%= @book.title %>
                  <% end %>
                  </td>
                <td><%= @book.body %></td>

                <td><%= link_to(edit_book_path(@book.id), class:"btn btn-sm btn-success") do %>
                <span>Edit</span>
                <% end %>
                </td>
                <td><%= link_to(destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか", class:"btn btn-sm btn-danger") do %>
                <span>Destroy</span>
                <% end %>
                </td>

              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</body>